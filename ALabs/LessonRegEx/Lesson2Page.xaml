        <Button Content="3. Basic Patterns" Width="300" Height="50" Margin="-1100,-200,0,0" Click ="btn3Click" Name="btn3" IsEnabled="False"/>
        <Button Content="4. Recap" Width="300" Height="50" Margin="-1100,0,0,0" Click ="btn4Click" Name="btn4" IsEnabled="False"/>
        <Button Content="5. Pracice" Width="300" Height="50" Margin="-1100,200,0,0" Click ="btn5Click" Name="btn5" IsEnabled="False"/>
        <TextBox TextAlignment="Left" FontFamily="sans-serif" FontWeight="Regular" FontSize="30" Margin="350,-150,20,20" TextWrapping="Wrap"  Width="1000" Height="500" Name="tbL" IsEnabled="False" VerticalAlignment="Center" />
        <Button Content="Back" Width="600" Height="50" Click="BackButton_Click" Margin="10,600,0,0"/>
    </Grid>
</Page>
